examples {
  ["database pod quadlet"] {
    """
    [Unit]
    Description=Database Pod with Security
    Requires=network.target
    After=network.target
    
    [Install]
    WantedBy=multi-user.target
    
    [Pod]
    PodName=database-cluster
    Network=db-network
    PublishPort=5432:5432
    PublishPort=6379:6379
    Dns=10.0.0.1
    DnsSearch=internal.example.com
    DnsSearch=db.example.com
    Volume=postgres-data:/var/lib/postgresql/data:Z
    Volume=redis-data:/data:Z
    Volume=/etc/database/config:/etc/config:ro
    UserNS=keep-id
    GidMap=0:100000:65536
    UidMap=0:100000:65536
    NetworkAlias=postgres.db
    NetworkAlias=redis.db
    NetworkAlias=primary.db
    PodmanArgs=--hostname=db-cluster.internal
    PodmanArgs=--exit-policy=continue
    PodmanArgs=--security-opt=label:disable=false
    PodmanArgs=--security-opt=label:type=container_t
    PodmanArgs=--label=app=database
    PodmanArgs=--label=tier=data
    PodmanArgs=--label=security=high
    PodmanArgs=--label=backup=enabled
    PodmanArgs=--annotation=backup.schedule=0 2 * * *
    PodmanArgs=--annotation=monitoring.enabled=true
    PodmanArgs=--share=net
    PodmanArgs=--share=uts
    PodmanArgs=--infra-image=registry.redhat.io/ubi8/pause:latest
    
    """
  }
}
