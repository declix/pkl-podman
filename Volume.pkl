module declix.podman.Volume

extends "@pkl-systemd/Unit.pkl"

unit: UnitSection?
install: InstallSection?
volume: VolumeSection

// https://docs.podman.io/en/latest/markdown/podman-systemd.unit.5.html
local class VolumeSection {
    // Volume name
    volumeName: String?
    
    // Volume driver
    driver: String?
    
    // Device to mount for volume
    device: String?
    
    // Image for volume (when using image driver)
    image: String?
    
    // User ownership
    user: String?
    
    // Group ownership
    group: String?
    
    // Copy image content to volume
    copy: Boolean?
    
    // Labels
    label: Mapping<String, String>?
    
    // Driver options
    options: (String|Listing<String>)?
    
    // Filesystem type
    type: String?
    
    // Containers.conf module
    containersConfModule: (String|Listing<String>)?
    
    // Global args
    globalArgs: (String|Listing<String>)?
    
    // Additional podman volume create flags
    podmanArgs: Listing<String>?
}